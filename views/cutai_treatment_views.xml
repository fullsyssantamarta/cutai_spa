<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tratamientos -->
    <record id="view_cutai_treatment_tree" model="ir.ui.view">
        <field name="name">cutai.treatment.tree</field>
        <field name="model">cutai.treatment</field>
        <field name="arch" type="xml">
            <list string="Tratamientos">
                <field name="partner_id"/>
                <field name="zone_id"/>
                <field name="start_date"/>
                <field name="planned_sessions"/>
                <field name="completed_sessions"/>
                <field name="progress" widget="progressbar"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_cutai_treatment_form" model="ir.ui.view">
        <field name="name">cutai.treatment.form</field>
        <field name="model">cutai.treatment</field>
        <field name="arch" type="xml">
            <form string="Tratamiento">
                <header>
                    <button name="action_activate" string="Activar" type="object" invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_pause" string="Pausar" type="object" invisible="state != 'active'"/>
                    <button name="action_complete" string="Completar" type="object" invisible="state not in ['active', 'paused']" class="oe_highlight"/>
                    <button name="action_schedule_next_session" string="Programar Sesión" type="object" invisible="state != 'active'" class="oe_highlight"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="zone_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="membership_id"/>
                        </group>
                        <group>
                            <field name="planned_sessions"/>
                            <field name="completed_sessions"/>
                            <field name="progress" widget="progressbar"/>
                            <field name="next_session_date"/>
                        </group>
                    </group>
                    <group string="Parámetros Predeterminados">
                        <group>
                            <field name="default_fluence"/>
                            <field name="default_spot_size"/>
                            <field name="default_pulse_duration"/>
                        </group>
                        <group>
                            <field name="frequency"/>
                            <field name="custom_frequency_days" invisible="frequency != 'custom'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sesiones">
                            <field name="session_ids"/>
                        </page>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_cutai_treatment" model="ir.actions.act_window">
        <field name="name">Tratamientos</field>
        <field name="res_model">cutai.treatment</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Sesiones -->
    <record id="view_cutai_session_tree" model="ir.ui.view">
        <field name="name">cutai.session.tree</field>
        <field name="model">cutai.session</field>
        <field name="arch" type="xml">
            <list string="Sesiones">
                <field name="session_date"/>
                <field name="partner_id"/>
                <field name="zone_id"/>
                <field name="session_number"/>
                <field name="branch_id"/>
                <field name="attendant_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_cutai_session_form" model="ir.ui.view">
        <field name="name">cutai.session.form</field>
        <field name="model">cutai.session</field>
        <field name="arch" type="xml">
            <form string="Sesión">
                <header>
                    <button name="action_start_session" string="Iniciar" type="object" invisible="state != 'confirmed'" class="oe_highlight"/>
                    <button name="action_complete_session" string="Completar" type="object" invisible="state != 'in_progress'" class="oe_highlight"/>
                    <button name="action_mark_no_show" string="No Asistió" type="object" invisible="state not in ['scheduled', 'confirmed']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="treatment_id"/>
                            <field name="session_number"/>
                            <field name="session_date"/>
                            <field name="appointment_id"/>
                        </group>
                        <group>
                            <field name="branch_id"/>
                            <field name="cabin_id"/>
                            <field name="machine_id"/>
                            <field name="attendant_id"/>
                        </group>
                    </group>
                    <group string="Parámetros Técnicos">
                        <group>
                            <field name="fluence"/>
                            <field name="spot_size"/>
                            <field name="pulse_duration"/>
                            <field name="pulses_count"/>
                        </group>
                        <group>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="duration_minutes"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Observaciones">
                            <group>
                                <field name="pre_treatment_notes"/>
                                <field name="post_treatment_notes"/>
                            </group>
                            <group>
                                <group>
                                    <field name="pain_level"/>
                                    <field name="skin_reaction"/>
                                    <field name="cooling_applied"/>
                                </group>
                                <group>
                                    <field name="hair_reduction_percentage"/>
                                </group>
                            </group>
                        </page>
                        <page string="Consumo Backbar">
                            <field name="backbar_consumption_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_cutai_session" model="ir.actions.act_window">
        <field name="name">Sesiones</field>
        <field name="res_model">cutai.session</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
