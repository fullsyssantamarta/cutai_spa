<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Consumo Backbar -->
    <record id="view_cutai_backbar_consumption_tree" model="ir.ui.view">
        <field name="name">cutai.backbar.consumption.tree</field>
        <field name="model">cutai.backbar.consumption</field>
        <field name="arch" type="xml">
            <list string="Consumo Backbar">
                <field name="date"/>
                <field name="session_id"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="branch_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_cutai_backbar_consumption" model="ir.actions.act_window">
        <field name="name">Consumo Backbar</field>
        <field name="res_model">cutai.backbar.consumption</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Productos Backbar -->
    <record id="view_cutai_backbar_product_tree" model="ir.ui.view">
        <field name="name">cutai.backbar.product.tree</field>
        <field name="model">cutai.backbar.product</field>
        <field name="arch" type="xml">
            <list string="Productos Backbar">
                <field name="product_id"/>
                <field name="consumption_type"/>
                <field name="default_quantity"/>
                <field name="zone_ids" widget="many2many_tags"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_cutai_backbar_product" model="ir.actions.act_window">
        <field name="name">Productos Backbar</field>
        <field name="res_model">cutai.backbar.product</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
