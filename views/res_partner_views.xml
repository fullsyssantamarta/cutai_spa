<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de formulario extendida para res.partner -->
    <record id="view_partner_form_cutai" model="ir.ui.view">
        <field name="name">res.partner.form.cutai</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Agregar botones inteligentes -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_session_history" type="object"
                        class="oe_stat_button" icon="fa-history"
                        invisible="is_cutai_client == False or total_sessions_count == 0">
                    <field name="total_sessions_count" widget="statinfo" string="Sesiones"/>
                </button>
            </xpath>
            
            <!-- Agregar checkbox de Cliente CUTAI visible en la parte superior -->
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="is_cutai_client" widget="boolean_toggle"/>
            </xpath>
            
            <!-- Agregar pestaña de Información CUTAI -->
            <xpath expr="//notebook" position="inside">
                <page string="Información CUTAI" invisible="is_cutai_client == False">
                    <group>
                        <group string="Datos Personales">
                            <field name="birthdate"/>
                            <field name="age" readonly="1"/>
                            <field name="instagram_account" placeholder="usuario_instagram"/>
                        </group>
                        <group string="Estadísticas de Citas">
                            <field name="total_appointments" readonly="1"/>
                            <field name="completed_appointments" readonly="1"/>
                            <field name="cancelled_appointments" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Promoción Activa">
                            <field name="has_promotion"/>
                            <field name="promotion_name" invisible="has_promotion == False" placeholder="Nombre de la promoción..."/>
                            <field name="promotion_expiry" invisible="has_promotion == False"/>
                        </group>
                        <group string="Membresía Activa">
                            <field name="active_membership_id"/>
                        </group>
                    </group>
                    
                    <!-- Detalles de Membresía (solo si tiene membresía activa) -->
                    <group invisible="active_membership_id == False">
                        <group string="Información de Membresía">
                            <field name="membership_cycle" widget="badge"/>
                            <field name="membership_next_charge"/>
                            <field name="membership_late_fees" widget="monetary"/>
                        </group>
                        <group string="Estado de Membresía">
                            <field name="membership_is_frozen" widget="boolean_toggle"/>
                            <field name="membership_freeze_reason" invisible="membership_is_frozen == False" placeholder="Motivo del congelamiento..."/>
                        </group>
                    </group>
                    <group>
                        <group string="Datos Clínicos">
                            <field name="phototype"/>
                            <field name="active_zones" widget="many2many_tags"/>
                            <field name="uses_contraceptives"/>
                            <field name="has_pcos"/>
                            <field name="allergy_info" placeholder="Alergias o condiciones médicas relevantes..."/>
                        </group>
                        <group string="Consentimiento">
                            <field name="consent_valid"/>
                            <field name="consent_date"/>
                            <field name="consent_document_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Estadísticas de Tratamiento">
                            <field name="total_sessions_count"/>
                            <field name="last_appointment_date"/>
                            <field name="next_appointment_date"/>
                        </group>
                        <group></group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
