<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de lista de sesiones -->
    <record id="view_cutai_session_tree" model="ir.ui.view">
        <field name="name">cutai.session.tree</field>
        <field name="model">cutai.session</field>
        <field name="arch" type="xml">
            <list string="Sesiones de Tratamiento"
                  decoration-success="state == 'completed'"
                  decoration-info="state == 'scheduled'"
                  decoration-warning="state == 'confirmed'"
                  decoration-muted="state == 'cancelled' or state == 'no_show'"
                  default_group_by="partner_id,zone_id">
                <field name="session_date"/>
                <field name="partner_id"/>
                <field name="zone_id"/>
                <field name="session_number_by_zone" string="# Sesión"/>
                <field name="total_sessions_zone" string="de"/>
                <field name="branch_id" optional="show"/>
                <field name="attendant_id"/>
                <field name="fluence" optional="hide"/>
                <field name="spot_size" optional="hide"/>
                <field name="hair_reduction_percentage" string="% Reducción" optional="show"/>
                <field name="duration_minutes" string="Duración" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'completed'"
                       decoration-info="state == 'scheduled'"
                       decoration-warning="state == 'confirmed'"
                       decoration-danger="state == 'no_show'"
                       decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario de sesiones -->
    <record id="view_cutai_session_form" model="ir.ui.view">
        <field name="name">cutai.session.form</field>
        <field name="model">cutai.session</field>
        <field name="arch" type="xml">
            <form string="Sesión de Tratamiento">
                <header>
                    <button name="action_start_session" type="object" string="Iniciar Sesión"
                            invisible="state != 'scheduled'" class="oe_highlight"/>
                    <button name="action_complete_session" type="object" string="Completar"
                            invisible="state != 'in_progress'" class="oe_highlight"/>
                    <button name="action_mark_no_show" type="object" string="No Asistió"
                            invisible="state not in ['scheduled', 'confirmed']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="scheduled,confirmed,in_progress,completed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" domain="[('is_cutai_client', '=', True)]"/>
                            <field name="treatment_id" domain="[('partner_id', '=', partner_id)]"/>
                            <field name="zone_id"/>
                            <field name="session_number"/>
                            <field name="session_number_by_zone" readonly="1"/>
                            <field name="total_sessions_zone" readonly="1"/>
                        </group>
                        <group>
                            <field name="session_date"/>
                            <field name="branch_id"/>
                            <field name="cabin_id"/>
                            <field name="attendant_id"/>
                            <field name="appointment_id"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Parámetros Técnicos" name="technical">
                            <group>
                                <group string="Configuración del Láser">
                                    <field name="machine_id"/>
                                    <field name="fluence"/>
                                    <field name="spot_size"/>
                                    <field name="shot_width"/>
                                    <field name="pulse_duration"/>
                                    <field name="pulses_count"/>
                                </group>
                                <group string="Control de Tiempo">
                                    <field name="start_time"/>
                                    <field name="end_time"/>
                                    <field name="duration_minutes" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Observaciones Clínicas" name="clinical">
                            <group>
                                <group>
                                    <field name="pre_treatment_notes"/>
                                    <field name="pain_level"/>
                                    <field name="cooling_applied"/>
                                </group>
                                <group>
                                    <field name="post_treatment_notes"/>
                                    <field name="skin_reaction"/>
                                    <field name="hair_reduction_percentage"/>
                                </group>
                            </group>
                            
                            <group string="Documentación Fotográfica">
                                <field name="photos_before" widget="many2many_binary"/>
                                <field name="photos_after" widget="many2many_binary"/>
                            </group>
                        </page>
                        
                        <page string="Consumo Backbar" name="backbar">
                            <field name="backbar_consumption_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="branch_id"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Facturación" name="billing">
                            <group>
                                <field name="invoice_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_cutai_session_search" model="ir.ui.view">
        <field name="name">cutai.session.search</field>
        <field name="model">cutai.session</field>
        <field name="arch" type="xml">
            <search string="Buscar Sesiones">
                <field name="partner_id"/>
                <field name="zone_id"/>
                <field name="branch_id"/>
                <field name="attendant_id"/>
                <separator/>
                <filter name="today" string="Hoy" 
                        domain="[('session_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="this_week" string="Esta Semana"
                        domain="[('session_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), 
                                 ('session_date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="scheduled" string="Programadas" domain="[('state', '=', 'scheduled')]"/>
                <filter name="completed" string="Completadas" domain="[('state', '=', 'completed')]"/>
                <filter name="in_progress" string="En Progreso" domain="[('state', '=', 'in_progress')]"/>
                <filter name="no_show" string="No Asistió" domain="[('state', '=', 'no_show')]"/>
                <separator/>
                <group expand="0" string="Agrupar Por">
                    <filter name="group_partner" string="Cliente" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_zone" string="Zona" context="{'group_by': 'zone_id'}"/>
                    <filter name="group_branch" string="Sucursal" context="{'group_by': 'branch_id'}"/>
                    <filter name="group_attendant" string="Operador" context="{'group_by': 'attendant_id'}"/>
                    <filter name="group_state" string="Estado" context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Fecha" context="{'group_by': 'session_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Pivot para análisis de sesiones -->
    <record id="view_cutai_session_pivot" model="ir.ui.view">
        <field name="name">cutai.session.pivot</field>
        <field name="model">cutai.session</field>
        <field name="arch" type="xml">
            <pivot string="Análisis de Sesiones" sample="1">
                <field name="zone_id" type="row"/>
                <field name="branch_id" type="col"/>
                <field name="session_number_by_zone" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Vista Graph para estadísticas de sesiones -->
    <record id="view_cutai_session_graph" model="ir.ui.view">
        <field name="name">cutai.session.graph</field>
        <field name="model">cutai.session</field>
        <field name="arch" type="xml">
            <graph string="Estadísticas de Sesiones" type="bar" sample="1" stacked="True">
                <field name="zone_id"/>
                <field name="session_number_by_zone" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vista Kanban para sesiones -->
    <record id="view_cutai_session_kanban" model="ir.ui.view">
        <field name="name">cutai.session.kanban</field>
        <field name="model">cutai.session</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" default_group_by="state">
                <field name="partner_id"/>
                <field name="zone_id"/>
                <field name="session_date"/>
                <field name="session_number_by_zone"/>
                <field name="total_sessions_zone"/>
                <field name="branch_id"/>
                <field name="attendant_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="partner_id"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="zone_id"/> - Sesión <field name="session_number_by_zone"/>/<field name="total_sessions_zone"/>
                                    </div>
                                </div>
                                <span class="float-end">
                                    <field name="state" widget="label_selection"
                                           options="{'classes': {'completed': 'success', 'scheduled': 'info', 'confirmed': 'warning', 'no_show': 'danger', 'cancelled': 'default'}}"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <i class="fa fa-calendar"/> <field name="session_date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="attendant_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción de ventana para sesiones -->
    <record id="action_cutai_session" model="ir.actions.act_window">
        <field name="name">Sesiones de Tratamiento</field>
        <field name="res_model">cutai.session</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
        <field name="context">{
            'search_default_group_partner': 1,
            'search_default_group_zone': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay sesiones registradas
            </p>
            <p>
                Las sesiones se crean automáticamente cuando se completa una cita de tratamiento láser.
            </p>
        </field>
    </record>

    <!-- Vista especial de historial por zona para un cliente -->
    <record id="view_cutai_session_history_tree" model="ir.ui.view">
        <field name="name">cutai.session.history.tree</field>
        <field name="model">cutai.session</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <list string="Historial de Sesiones por Zona"
                  create="false"
                  decoration-success="state == 'completed'"
                  decoration-muted="state == 'cancelled' or state == 'no_show'">
                <field name="zone_id" string="Zona"/>
                <field name="session_number_by_zone" string="Sesión #"/>
                <field name="total_sessions_zone" string="de"/>
                <field name="session_date" string="Fecha"/>
                <field name="branch_id" string="Sucursal"/>
                <field name="attendant_id" string="Profesional"/>
                <field name="fluence" string="Fluencia"/>
                <field name="spot_size" string="Spot"/>
                <field name="shot_width" string="Ancho Disparo" optional="show"/>
                <field name="hair_reduction_percentage" string="% Reducción"/>
                <field name="post_treatment_notes" string="Notas"/>
                <field name="state" invisible="1"/>
            </list>
        </field>
    </record>

</odoo>

