<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Dashboard Placeholder -->
    <record id="view_cutai_dashboard" model="ir.ui.view">
        <field name="name">cutai.dashboard</field>
        <field name="model">cutai.session</field>
        <field name="arch" type="xml">
            <list string="Dashboard CUTAI">
                <field name="session_date"/>
                <field name="partner_id"/>
                <field name="zone_id"/>
                <field name="branch_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_cutai_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">cutai.session</field>
        <field name="view_mode">list,graph,pivot</field>
        <field name="context">{'search_default_this_month': 1}</field>
    </record>

</odoo>
